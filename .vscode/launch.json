{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Отладчик Python: текущий файл",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Main Bot",
      "type": "debugpy",
      "request": "launch",
      "module": "src",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Pytest All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "-m",
        "not slow"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: DMarket API Client",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/dmarket/dmarket_api.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Skills: Debug Current Skill",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "SKILL_DEBUG": "true"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Skills: Test Current Skill",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${fileDirname}/tests",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Skills: Run Test Runner",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/skills_test_runner.py",
      "console": "integratedTerminal",
      "args": ["${input:testSkillName}"]
    },
    {
      "name": "Skills: Check Dependencies",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/skills_composition.py",
      "console": "integratedTerminal",
      "args": ["resolve", "--skill", "${input:skillName}"]
    },
    {
      "name": "Skills: Security Scan",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/security_scan_skills.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Skills: Profile Performance",
      "type": "debugpy",
      "request": "launch",
      "module": "cProfile",
      "args": [
        "-o",
        "skill_profile.prof",
        "${file}"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "SKILL_PROFILE": "true"
      }
    }
  ],
  "inputs": [
    {
      "id": "skillName",
      "type": "promptString",
      "description": "Enter skill name (e.g., ai-arbitrage-predictor)"
    },
    {
      "id": "testSkillName",
      "type": "promptString",
      "description": "Enter skill name to test (or leave empty for all)",
      "default": ""
    }
  ]
}
