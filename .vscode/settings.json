{
  // ==================== Общие настройки файлов ====================
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/*.egg-info": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/.tox": true,
    "**/dist": true,
    "**/build": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/htmlcov/**": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/htmlcov": true,
    "**/build": true,
    "**/dist": true
  },
  // ==================== Python Environment ====================
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.parameterTypes": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],
  "python.analysis.indexing": true,
  "python.languageServer": "Jedi",
  // ==================== Python Formatting (Ruff - replaces Black) ====================
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "always",
      "source.organizeImports.ruff": "always"
    },
    "editor.rulers": [
      88,
      100
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off"
  },
  // ==================== Ruff Configuration ====================
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.format.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.showNotifications": "onWarning",
  "ruff.importStrategy": "fromEnvironment",
  // NOTE: Black formatter is no longer used - Ruff-format replaces it
  // ==================== MyPy Type Checking ====================
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--config-file=pyproject.toml",
    "--follow-imports=silent",
    "--show-error-codes",
    "--no-incremental"
  ],
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  // ==================== Testing Configuration ====================
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests",
    "-v",
    "--tb=short",
    "--strict-markers",
    "--showlocals"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.promptToConfigure": false,
  // ==================== Editor Settings ====================
  "editor.fontFamily": "'Cascadia Code NF', 'JetBrains Mono NF', 'Fira Code NF', Consolas, monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.unicodeHighlight.includeComments": true,
  "editor.unicodeHighlight.includeStrings": true,
  "editor.unicodeHighlight.allowedCharacters": {},
  "editor.unicodeHighlight.allowedLocales": {
    "en": true
  },
  // ==================== Gremlins Tracker Settings ====================
  "gremlins.color_info": "#00ff00",
  "gremlins.color_warning": "#ffff00",
  "gremlins.color_error": "#ff0000",
  "gremlins.showInProblemPane": true,
  "gremlins.gutterIconSize": "75%",
  "gremlins.characters": {
    "2013": {
      "zeroWidth": false,
      "description": "EN DASH",
      "level": "error"
    },
    "2014": {
      "zeroWidth": false,
      "description": "EM DASH",
      "level": "error"
    },
    "2018": {
      "zeroWidth": false,
      "description": "LEFT SINGLE QUOTATION MARK",
      "level": "error"
    },
    "2019": {
      "zeroWidth": false,
      "description": "RIGHT SINGLE QUOTATION MARK",
      "level": "error"
    },
    "201C": {
      "zeroWidth": false,
      "description": "LEFT DOUBLE QUOTATION MARK",
      "level": "error"
    },
    "201D": {
      "zeroWidth": false,
      "description": "RIGHT DOUBLE QUOTATION MARK",
      "level": "error"
    },
    "00A0": {
      "zeroWidth": false,
      "description": "NO-BREAK SPACE",
      "level": "error"
    },
    "200B": {
      "zeroWidth": true,
      "description": "ZERO WIDTH SPACE",
      "level": "error"
    },
    "200C": {
      "zeroWidth": true,
      "description": "ZERO WIDTH NON-JOINER",
      "level": "error"
    },
    "200D": {
      "zeroWidth": true,
      "description": "ZERO WIDTH JOINER",
      "level": "error"
    },
    "FEFF": {
      "zeroWidth": true,
      "description": "ZERO WIDTH NO-BREAK SPACE",
      "level": "error"
    },
    "037E": {
      "zeroWidth": false,
      "description": "GREEK QUESTION MARK",
      "level": "error"
    },
    "0430-044F": {
      "zeroWidth": false,
      "description": "CYRILLIC SMALL LETTERS (а-я)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    },
    "0410-042F": {
      "zeroWidth": false,
      "description": "CYRILLIC CAPITAL LETTERS (А-Я)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    },
    "0401": {
      "zeroWidth": false,
      "description": "CYRILLIC CAPITAL LETTER IO (Ё)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    },
    "0451": {
      "zeroWidth": false,
      "description": "CYRILLIC SMALL LETTER IO (ё)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    },
    "0406": {
      "zeroWidth": false,
      "description": "CYRILLIC CAPITAL LETTER BYELORUSSIAN-UKRAINIAN I (І)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    },
    "0456": {
      "zeroWidth": false,
      "description": "CYRILLIC SMALL LETTER BYELORUSSIAN-UKRAINIAN I (і)",
      "level": "error",
      "overviewRulerColor": "rgba(255,0,0,1)"
    }
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.minShowDelay": 0,
  "editor.inlineSuggest.edits.allowCodeShifting": "always",
  "editor.inlineSuggest.edits.renderSideBySide": "auto",
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.pasteAs.enabled": true,
  "editor.pasteAs.showPasteSelector": "always",
  "editor.suggest.filterGraceful": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  // ==================== Git Settings ====================
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "git.suggestSmartCommit": true,
  "git.enableCommitSigning": false,
  // ==================== Terminal Settings ====================
  "terminal.integrated.fontFamily": "'Cascadia Code NF', 'JetBrains Mono NF', Consolas, monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-NoExit",
        "-Command",
        "& {if (Test-Path '.venv\\Scripts\\Activate.ps1') { & '.venv\\Scripts\\Activate.ps1' }}"
      ]
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.unicodeVersion": "11",
  "terminal.integrated.detectLocale": "off",
  "terminal.explorerKind": "external",
  // ==================== Spell Checker ====================
  "cSpell.words": [
    "aiofiles",
    "aiocache",
    "aiolimiter",
    "asyncio",
    "csgo",
    "dmarket",
    "dotenv",
    "dota",
    "Fernet",
    "hexdigest",
    "hmac",
    "httpx",
    "mypy",
    "pydantic",
    "pytest",
    "pwsh",
    "ruff",
    "SQLAlchemy",
    "structlog",
    "tenacity",
    "urlencode",
    "websocket",
    "asyncpg",
    "alembic",
    "uvloop",
    "orjson",
    "msgpack",
    "backoff",
    "sentry",
    "waxpeer",
    "mils",
    "tradelink",
    "steamid"
  ],
  "cSpell.language": "en,ru",
  "cSpell.ignorePaths": [
    "**/__pycache__/**",
    "**/.venv/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**",
    "**/.ruff_cache/**",
    "**/node_modules/**",
    ".git",
    "poetry.lock",
    "**/htmlcov/**",
    "**/build/**",
    "**/dist/**"
  ],
  "cSpell.enabled": true,
  "cSpell.showStatus": true,
  // ==================== GitHub Copilot (Updated January 2026) ====================
  "github.copilot.enable": {
    "*": true,
    "python": true,
    "plaintext": true,
    "yaml": true,
    "markdown": true,
    "json": true,
    "jsonc": true,
    "dockerfile": true,
    "shellscript": true,
    "scminput": true,
    "toml": true,
    "ini": true
  },
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.suggest.enable": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.fixes": true,
  // NEW: Vision capabilities for image understanding
  "github.copilot.vision.enabled": true,
  // NEW: Multi-file editing support
  "github.copilot.multiFileEdits.enabled": true,
  // NEW: Workspace indexing for better context
  "github.copilot.workspaceIndexing.enabled": true,
  // NEW: Semantic code search
  "github.copilot.semanticSearch.enabled": true,
  // NEW: Improved completions with project context
  "github.copilot.completions.projectContext": true,
  // NEW: Auto-import suggestions
  "github.copilot.autoImport.enabled": true,
  // NEW: Smart variable naming
  "github.copilot.variableNaming.enabled": true,
  // ==================== GitHub Copilot Chat (Updated January 2026) ====================
  "github.copilot.chat.enabled": true,
  "github.copilot.chat.instructionFiles": [
    ".github/copilot-instructions.md",
    ".github/copilot-workspace.md"
  ],
  "github.copilot.chat.experimental.codeGeneration": true,
  "github.copilot.chat.terminal.autoRun": false,
  "github.copilot.chat.terminal.copyAllowed": false,
  "github.copilot.chat.agent.terminal.allowList": {
    "pytest": true,
    "ruff": true,
    "mypy": true,
    "python": true,
    "docker": true,
    "git": true,
    "pip": true,
    "uv": true
  },
  "github.copilot.chat.slashCommands": true,
  "github.copilot.chat.explainSelection": true,
  "github.copilot.chat.fixSelection": true,
  "github.copilot.chat.askSelection": true,
  "github.copilot.chat.testSelection": true,
  "github.copilot.chat.docSelection": true,
  "github.copilot.chat.experimental.voice": true,
  "github.copilot.chat.confirmation": "auto",
  "github.copilot.chat.history.enabled": true,
  "github.copilot.chat.experimental.context": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.terminalChatLocation": "chatView",
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.customOAIModels": [],
