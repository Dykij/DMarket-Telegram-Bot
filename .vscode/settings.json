  // Рекомендации промптов по контексту
  "chat.promptFilesRecommendations": [
    {
      "promptFile": ".github/prompts/python-async.prompt.md",
      "when": "editorLangId == python"
    },
    {
      "promptFile": ".github/prompts/test-generator.prompt.md",
      "when": "resourcePath =~ /tests/"
    },
    {
      "promptFile": ".github/prompts/telegram-handler.prompt.md",
      "when": "resourcePath =~ /telegram_bot/"
    },
    {
      "promptFile": ".github/prompts/ml-pipeline.prompt.md",
      "when": "resourcePath =~ /ml/ || resourcePath =~ /ai/"
    },
    {
      "promptFile": ".github/prompts/error-handling-retry.prompt.md",
      "when": "editorLangId == python"
    },
    {
      "promptFile": ".github/prompts/pydantic-model.prompt.md",
      "when": "resourcePath =~ /models/ || resourcePath =~ /schemas/"
    }
  ],
