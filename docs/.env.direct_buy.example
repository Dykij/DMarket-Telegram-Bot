# ðŸŽ¯ Direct Buy Trading System - Example .env Configuration
# Copy this file to .env and update with your values

# ============================================
# DMarket API Credentials
# ============================================
DMARKET_PUBLIC_KEY=your_public_key_here
DMARKET_SECRET_KEY=your_secret_key_here

# ============================================
# Trading Mode
# ============================================
# DRY_RUN=true  - Safe mode: simulates trades, no real money spent (RECOMMENDED FOR TESTING)
# DRY_RUN=false - Live mode: real trades with real money (USE WITH CAUTION!)
DRY_RUN=true

# ============================================
# Trading Parameters
# ============================================
# Minimum profit percentage (after all fees)
MIN_PROFIT_PERCENT=8

# Maximum price for a single item (USD)
MAX_ITEM_PRICE=30

# Scan interval in seconds (120 = 2 minutes)
CHECK_INTERVAL=120

# ============================================
# Whitelist Configuration
# ============================================
# Enable whitelist for high-liquidity items
WHITELIST_ENABLED=true

# How much to reduce profit threshold for whitelist items (%)
WHITELIST_PROFIT_BOOST=2.0

# ============================================
# Undercutting Configuration
# ============================================
# Enable automatic price undercutting
UNDERCUT_ENABLED=true

# How much to undercut competitor prices (cents)
UNDERCUT_STEP=1

# Minimum profit margin (1.02 = must sell at least 2% above buy price)
MIN_PROFIT_MARGIN=1.02

# Inventory check interval (seconds) - how often to update prices
INVENTORY_CHECK_INTERVAL=1800

# ============================================
# Blacklist Configuration
# ============================================
# Enable keyword blacklist filter
BLACKLIST_KEYWORD_FILTER=true

# Enable float/wear filter (Battle-Scarred, etc)
BLACKLIST_FLOAT_FILTER=true

# Enable sticker boost price filter
BLACKLIST_STICKER_BOOST_FILTER=true

# Enable rare pattern filter (Katowice, etc)
BLACKLIST_PATTERN_FILTER=false

# ============================================
# Liquidity Filters
# ============================================
# Minimum sales in last 24 hours
MIN_SALES_24H=3

# Minimum average sales per day
MIN_AVG_SALES_PER_DAY=0.3

# Maximum overprice ratio (current/suggested price)
MAX_OVERPRICE_RATIO=1.5

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Silent Mode (Notifications)
# ============================================
# Enable silent mode (no notification sounds during night hours)
SILENT_MODE=true

# Silent hours (23:00 - 08:00 by default)
SILENT_HOUR_START=23
SILENT_HOUR_END=8

# Disable all notifications (only use for debugging)
GLOBAL_SILENT_MODE=false

# ============================================
# Supported Games
# ============================================
# Comma-separated list of games to scan
# Available: csgo, rust, dota2, tf2
SCAN_GAMES=csgo,rust,dota2,tf2

# ============================================
# Advanced Settings
# ============================================
# API rate limits (requests per minute per endpoint)
RATE_LIMIT_MARKET=30
RATE_LIMIT_INVENTORY=20
RATE_LIMIT_TARGETS=10
RATE_LIMIT_ACCOUNT=15
RATE_LIMIT_TRADE=10

# Connection pool settings
MAX_CONNECTIONS=100
MAX_KEEPALIVE_CONNECTIONS=30
KEEPALIVE_EXPIRY=60

# Retry settings
MAX_RETRIES=3
RETRY_CODES=429,500,502,503,504

# Cache settings
ENABLE_CACHE=true

# Sentry error tracking (optional)
SENTRY_DSN=

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///bot_database.db

# ============================================
# Timezone
# ============================================
TZ=Europe/Moscow

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/dmarket_bot.log
JSON_LOGS=false

# ============================================
# Development/Debug
# ============================================
DEBUG=false
TESTING=false
